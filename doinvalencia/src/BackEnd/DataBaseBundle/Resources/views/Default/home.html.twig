        <div class="row">
            <div class="col-md-12">
                <div class="carousel slide" id="home-carousel" data-ride="carousel">
                    <div class="carousel-inner">
                         <div class="item active">
                            <img src="{{asset('bundles/dawplantilla/images/image3.jpg')}}" alt="image3" />
                        </div>
                         {% for evento in eventos %}
                            <div class="item">
