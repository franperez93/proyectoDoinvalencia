{% trans_default_domain 'FOSUserBundle' %}


<div class="container">
    <br>
    <h1>Registro</h1>
    <div class="row">
        <div class="col-md-4 col-md-offset-1">
            {{ form_start(form, {'method': 'post', 'action': path('fos_user_registration_register'), 'attr': {'class': 'fos_user_registration_register form-horizontal'}}) }}
  
                <div class="form-group">
                   <label for="inputType" class="col-md-3 control-label">Email</label>
                    <div class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-envelope"></i></span>
                        {{form_widget(form.email)}}
                    </div>
                </div>    
                <div class="form-group">
                  <label for="inputType" class="col-md-3 control-label">Usuario</label>
                    <div class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                        {{form_widget(form.username)}}
                    </div>
                </div>
                <div class="form-group">
                   <label for="inputType" class="col-md-3 control-label">Contraseña</label>
                    <div class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                        {{form_widget(form.plainPassword.first)}}
                    </div>
                </div>  
                <div class="form-group">
                   <label for="inputType" class="col-md-3 control-label">Confirmar Contraseña</label>
                    <div class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                        {{form_widget(form.plainPassword.second)}}
                    </div>
                </div>
                <div class="form-group">
                   <label for="inputType" class="col-md-3 control-label">Rol</label>
                        {{form_widget(form.roles)}}
                </div>
                 <br>
                <div>
                    <input type="submit" class="btn btn-primary" value="Registrar"/>
               </div>
           {{ form_end(form) }} 
       </div>
    </div>
</div>
    
{% block javascripts %}

<script>
    
     $(document).ready(function(){
        
        $("input").prop("class","form-control")
        $("input:submit").prop("class","btn btn-primary")
       
    });
    
</script>

{% endblock %}