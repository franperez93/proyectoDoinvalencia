{% extends "FOSUserBundle::layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block fos_user_content %}
{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<link rel="stylesheet" href="{{asset('bundles/dawplantilla/css/login.css')}}" type="text/css" />

<br>
<div class="container">
	<div class="row" id="logearte">
        <div class="col-md-4 col-md-offset-4">
            <div class="panel panel-info">
                <div class="panel-heading">
			    	<h2 class="text-center">Login</h2>
			 	</div>
			 	<div class="panel-body">
                    <form action="{{path('fos_user_security_check')}}" method="post" role="form">   
                        <div class="input-group">
                            <div class="input-group-addon">
    						    <span class="glyphicon glyphicon-user"></span>
    					    </div>	
                                <input type="text" id="username" name="_username" tabindex="1" class="form-control" placeholder="Nombre de Usuario" value="{{ last_username }}" required/>
                        </div>
                        <br>
                        <div class="input-group">
                            <div class="input-group-addon">
    						    <span class="glyphicon glyphicon-lock"></span>
    					    </div>	
                            <input type="password" id="password" name="_password" tabindex="1" class="form-control" placeholder="ContraseÃ±a" required/>
                        </div>
                        <br>
                        <div>
                            <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
                            <label for="remember_me">Recordar datos</label>
                            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                        </div>
                        <br>
                        <div>
                            <input type="submit" id="_submit" name="_submit" class="btn btn-primary" value="Acceder" />
                            <a href="{{path('fos_user_registration_register')}}" class="btn btn-info">Eres nuevo? Registrate!!</a>
                        </div>
                    </form>
                </div>    
            </div>
        </div>
    </div>
</div>
<br>
<br>


{% endblock fos_user_content %}
