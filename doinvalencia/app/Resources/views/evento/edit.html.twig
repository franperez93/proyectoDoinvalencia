{% extends "FOSUserBundle::layout.html.twig" %}

{% block body %}

<div class="container">
   
    <h1>Editar Evento</h1>

    {{ form_start(edit_form) }}
        {{ form_widget(edit_form) }}
        <input class="btn btn-primary" type="submit" value="Editar" />
    {{ form_end(edit_form) }}
    <br>
   
        <div>        
        
            
            {{ form_start(delete_form) }}
                <input class="btn btn-danger" type="submit" name="elim" value="Eliminar">
                <a class="btn btn-info" href="{{ path('evento_index') }}">Volver a la lista</a>
            {{ form_end(delete_form) }}
            
        </div>   
</div>            
     
{% endblock %}

{% block javascripts %}

<script>
    
     $(document).ready(function(){
        
        $("input:text").prop("class","form-control").css('width','350px');
        $("select").prop("class","form-control").css('width','95px').css('display','inline');
        $("#evento_reservas").prop("class","form-control").css('width','90');
        $("#evento_reservasRestantes").prop("class","form-control").css('width','90');
        $("#evento_tipoEventoId").prop("class","form-control").css('width','90');
        
        
        
     });    
</script>

{% endblock %}
