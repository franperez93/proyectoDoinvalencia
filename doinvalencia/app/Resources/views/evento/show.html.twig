{% extends "FOSUserBundle::layout.html.twig" %}

{% block body %}
   
    <section class="main container">
        <div class="row">
            <!--Seccion principal-->
            <section class="posts col-md-9">
                <div class="indice">
                    <ol class="breadcrumb">
                        <!--son referencias de ejemplo.. en este caso solo estaria inicio ya que estamos en la principal-->
                        <li><a href="{{ path('back_end_data_base_homepage') }}">Inicio</a></li>
                        <li><a href="{{ path('evento_index') }}">Eventos</a></li>
                        <li class="active">{{ evento.nombre }}</li>
                    </ol>
                </div>
                <!-- Articulo 1-->
                <article class="post clearfix">
                        
                            <img class="img-thumbnail imagen" src="{{ evento.imagen}}"></img>
                        
                    <div class="panel panel-primary">
                        <div class="panel-heading">
                            <h2 class="post-tittle">{{ evento.nombre }}</h2>
                        </div>
                        <div class="panel-body">
                            <p class="post-contenido text-justify">
                               {{ evento.informacion }}
                            </p>
                            <br>
                            <p><b>Localizacion: </b>{{ evento.localizacion }}</p>
                            <p><b>Ciudad: </b>{{ evento.ciudad }}</p>
                            <p><b>Fecha del evento: </b>{{ evento.fecha|date('Y-m-d') }}</p>
                            <p><b>Hora del evento: </b>{{ evento.fecha|date('H:i:s') }}</p>
                        </div>    
                        <div class="panel-footer">
                           
                            <div class="contenedor-botones">
                                 {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                                    <button class="btn btn-success" onclick="abrirComentarios()">Comentar</button>
                                    {% if is_granted("ROLE_ADMIN") %}
                                        <a href="{{ path('evento_edit', { 'id': evento.id }) }}" class="btn btn-info">Editar</a>
                                    {% endif %} 
                                {% endif %}
                                
                                <a class="btn btn-primary " href="javascript: void(0);" onclick="window.open('http://www.facebook.com/sharer.php?u={{ app.request.getUri }}','ventanacompartir', 'toolbar=0, status=0, width=650, height=450');">Compartir con Facebook</a>
                            </div> 
                            <div id="comentarios" hidden>
                                {% include 'FOSCommentBundle:Thread:async.html.twig' with {'id': 'foo'} %}
                            </div>
                        </div>    
                    </div>
                    
                </article>
            </section>
            <!--Seccion secundaria Barra lateral-->
            <aside class="col-md-3 hidden-xd hidden-sm">
                <h4>Evento</h4>
                <a href="#" class="list-group-item">
                    <h4 class="list-group-item-heading">{{ evento.nombre }}</h4>
                    <p class="list-group-item-text"></p>
                </a>
               
            </aside>
        </div>
    </section>
{% endblock %}